{
    "name": "AEye Describe",
    "description": "Image Describer",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["activeTab", "scripting", "storage", "tabs"],
    "optional_permissions": ["accessibilityFeatures.read"],
    "host_permissions": ["http://localhost:3000/*"],
    "action": {
        "default_popup": "extension/dist/home/home.html",
        "default_icon": "extension/aeye.png"
    },

    "background": {
        "service_worker": "extension/dist/js/service/service.js",
        "type": "module"

    },
    "content_scripts": [
        {
        "js": ["extension/dist/js/scripts/script.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_idle"
        }
    ]
}